{
	"extends": "@pnxdxt/tsconfig",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/components/*": ["components/*"],
			"@/hooks/*": ["hooks/*"],
			"@/layouts/*": ["layouts/*"],
			"@/lib/*": ["lib/*"],
			"@/pages/*": ["pages/*"],
			"@/api/*": ["pages/api/*"],
			"@/public/*": ["public/*"],
			"@/styles/*": ["styles/*"],
			"@/data/*": ["data/*"]
		}
	},
	"include": ["next-env.d.ts", "additional.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
